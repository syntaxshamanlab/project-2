{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Auto-Ingest New NotebookLM Files",
      "type": "shell",
      "command": "${workspaceFolder}/auto-ingest.py",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Watch for New Files (Auto-Ingest Every 30s)",
      "type": "shell",
      "command": "while true; do ${workspaceFolder}/auto-ingest.py; sleep 30; done",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*",
          "endsPattern": "^.*"
        }
      }
    },
    {
      "label": "Manual Ingest Check (One Time)",
      "type": "shell",
      "command": "python3 ${workspaceFolder}/auto-ingest.py",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
